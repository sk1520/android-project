<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.sk.mtafare.mtastatus.SubwayFragment">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/optionsDrawerlayout"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/busTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_8ssp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="New York City Bus Maps"
                    android:textColor="#1c1c1c"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold" />

                <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
                    android:id="@+id/busBronxMapPhotoView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:contentDescription="Bronx Bus Map" />

                <TextView
                    android:id="@+id/downloadBronxMapTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="text"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />

                <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
                    android:id="@+id/busBrooklynMapPhotoView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:contentDescription="Brooklyn Bus Map" />

                <TextView
                    android:id="@+id/downloadBrooklynMapTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="text"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />

                <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
                    android:id="@+id/busManhattanMapPhotoView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:contentDescription="Brooklyn Bus Map" />

                <TextView
                    android:id="@+id/downloadManhattanMapTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="text"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />

                <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
                    android:id="@+id/busQueensMapPhotoView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:contentDescription="Brooklyn Bus Map" />

                <TextView
                    android:id="@+id/downloadQueensMapTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="text"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />

                <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
                    android:id="@+id/BusStatenIslandMapPhotoView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:contentDescription="Brooklyn Bus Map" />

                <TextView
                    android:id="@+id/downloadStatenIslandMapTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="text"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>

        <android.support.design.widget.NavigationView
            android:id="@+id/main_navigation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:theme="@style/Custom_NavigationViewDrawerStyle"
            app:menu="@menu/main_navigation" />

    </android.support.v4.widget.DrawerLayout>

</FrameLayout>